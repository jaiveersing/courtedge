# ============================================
# CourtEdge Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development
ENVIRONMENT=development

# ===========================================
# FRONTEND (Vite) - prefix with VITE_
# ===========================================
VITE_ML_SERVICE_URL=http://localhost:8000
VITE_API_URL=http://localhost:3001/api
VITE_ML_API_URL=http://localhost:8000

# Production URLs (uncomment for deployment):
# VITE_ML_SERVICE_URL=https://your-ml-service.onrender.com
# VITE_API_URL=https://your-api.vercel.app/api
# VITE_ML_API_URL=https://your-ml-service.onrender.com

# ===========================================
# SECURITY - REQUIRED FOR PRODUCTION
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# SERVER
# ===========================================
PORT=3000
ML_SERVICE_URL=http://localhost:8000

# Base44 Integration
SERVER_BASE44_BASE_URL=https://app.base44.com/api/apps
SERVER_BASE44_APP_ID=your_app_id_here
SERVER_BASE44_API_KEY=your_api_key_here

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=courtedge
DB_USER=postgres
DB_PASSWORD=your-secure-password

# ===========================================
# REDIS (Caching)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# ML SERVICE (Python FastAPI)
# ===========================================
# CORS origins (comma-separated for production)
CORS_ORIGINS=https://your-frontend.vercel.app,https://www.yoursite.com

# ===========================================
# EXTERNAL APIs (Optional)
# ===========================================
# Odds API
ODDS_API_KEY=your-odds-api-key

# NBA API
NBA_API_KEY=optional_key_here

# Sports Data
SPORTSDATA_IO_KEY=your-sportsdata-key
RAPID_API_KEY=your-rapidapi-key

# Weather Services
OPENWEATHER_API_KEY=your-openweather-key
WEATHERAPI_KEY=your-weatherapi-key
VISUALCROSSING_API_KEY=your-visualcrossing-key

# Firebase (Push Notifications)
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ===========================================
# AWS (Optional - for backups/model storage)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BACKUP_BUCKET=courtedge-backups
S3_MODEL_BUCKET=courtedge-ml-models

# ===========================================
# MONITORING (Optional)
# ===========================================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password
LOG_LEVEL=info
